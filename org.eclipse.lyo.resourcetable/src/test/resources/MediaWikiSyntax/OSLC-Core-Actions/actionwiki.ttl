@prefix oslc:      <http://open-services.net/ns/core#> .
@prefix authoring: <http://open-services.net/ns/authoring#> .
@prefix xs:        <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf:       <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:      <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms:   <http://purl.org/dc/terms/> .
@prefix foaf:      <http://xmlns.com/foaf/0.1/> .
@prefix cm:        <http://open-services.net/ns/cm#> .
@prefix qm:        <http://open-services.net/ns/qm#> .
@prefix oslc_rm:   <http://open-services.net/ns/rm#> .
@prefix actions:   <http://open-services.net/ns/core/actions#> .

@base <http://open-services.net/ns/core/actions#Action> .

<>
          a                              oslc:ResourceShape ;
          oslc:describes                 actions:Action ;
          dcterms:title                  "An Action provides a representation of the current state of a Resource Set." ;
          oslc:property                  <#title> ;
          oslc:property                  <#description> ;
          oslc:property                  <#type> ;
          oslc:property                  <#request> ;
.

<#title>
          a                              oslc:Property ;
          oslc:name                      "title" ;
          oslc:propertyDefinition        dcterms:title ;
          dcterms:title                  "dcterms:title" ;
          oslc:occurs                    oslc:Exactly-one ;
          oslc:valueType                 xs:XMLLiteral ;
          dcterms:description            "Title (reference: Dublin Core) of the resource represented as rich text in XHTML content." ;
.

<#description>
          a                              oslc:Property ;
          oslc:name                      "description" ;
          oslc:propertyDefinition        dcterms:description ;
          dcterms:title                  "dcterms:description" ;
          oslc:occurs                    oslc:Zero-or-one ;
          oslc:valueType                 xs:XMLLiteral ;
          dcterms:description            "Descriptive text (reference: Dublin Core) about resource represented as rich text in XHTML content. SHOULD include only content that is valid and suitable inside an XHTML &lt;div&gt; element." ;
.

<#type>
          a                              oslc:Property ;
          oslc:name                      "type" ;
          oslc:propertyDefinition        rdf:type ;
          dcterms:title                  "rdf:type" ;
          oslc:occurs                    oslc:One-or-many ;
          oslc:valueType                 oslc:Resource ;
          oslc:representation            oslc:Reference ;
          dcterms:description            "The resource type URIs.  At least one type **MUST** be `actions:Action`." ;
.

<#request>
          a                              oslc:Property ;
          oslc:name                      "request" ;
          oslc:propertyDefinition        actions:request ;
          dcterms:title                  "actions:request" ;
          oslc:occurs                    oslc:One-or-many ;
          oslc:valueType                 oslc:Resource ;
          oslc:range                     oslc:Any ;
          oslc:representation            oslc:Either ;
          dcterms:description            "Instructions for executing the action. It is likely that the target resource will be an `http:Request` but that is not necessarily the case.  Multiple occurrences of this property **MUST** be different ways of achieving the same operation; they are semantically the same, but achieved through different data or technologies." ;
.

<#_sections_>
          a                              rdfs:Seq ;
          rdf:_1                         <#_section_1> ;
          rdf:_2                         <#_section_2> ;
.

<#_section_1>
          a                              rdfs:Seq ;
          dcterms:title                  "*OSLC Core:* Common Properties" ;
          rdf:_1                         <#title> ;
          rdf:_2                         <#description> ;
          rdf:_3                         <#type> ;
.

<#_section_2>
          a                              rdfs:Seq ;
          dcterms:title                  "*OSLC Actions:* Start of additional properties" ;
          rdf:_1                         <#request> ;
.

